datasource db {
    provider = "sqlite"
    url = "file:./safeload.sqlite"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id          Int         @id @default(autoincrement())
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
    name        String      @unique
    isAdmin     Boolean     @default(false)
    uploads     FileUpload[]
}

model FileUpload {
    id          String      @id
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
    password    String
    salt        String
    checksum    String?
    
    // When upload started and finished
    uStarted    DateTime?
    uFinished   DateTime?
    uSecret     String

    expiresAt   DateTime?
    maxDownload Int?
    filename    String
    filesize    BigInt?
    downloads   Int         @default(0)
    viewCount   Int         @default(0)
    message     String?
    auther      User?       @relation(fields: [autherId], references: [id])
    autherId    Int?

    // 0 = Not uploaded yet, 1 = Upload started, 2 = Upload finished
    // status      Int         @default(0)
}

model Settings {
    id          Int         @id @default(1)
    unsafe      Boolean     @default(false)
    language    String      @default("en")
    theme       String      @default("default")
    vaultPath   String      @default("./vault/")

    // Maximal size of the data vault folder
    maxSize     Int         @default(51200)
    maxMsgSize  Int         @default(256)

    hashRounds  Int         @default(14)
    hashMemory  Int         @default(32768)
    hashPara    Int         @default(4)
}